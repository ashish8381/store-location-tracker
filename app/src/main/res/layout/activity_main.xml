<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Map View -->
    <org.osmdroid.views.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Date Navigation Bar -->
    <LinearLayout
        android:id="@+id/dateNavigationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="8dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#AAFFFFFF">

        <!-- Left Arrow -->
        <ImageView
            android:id="@+id/btnPrevDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back_ios_24px"
            android:contentDescription="Previous Date"
            android:padding="8dp" />

        <!-- Selected Date -->
        <TextView
            android:id="@+id/tvSelectedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selected Date"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true" />

        <!-- Right Arrow -->
        <ImageView
            android:id="@+id/btnNextDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_forward_ios_24px"
            android:contentDescription="Next Date"
            android:padding="8dp" />
    </LinearLayout>

</RelativeLayout>
